@startuml diagrama de clases TPI.V1
' CONFIGURACION DEL DIAGRAMA
skinparam linetype ortho
skinparam ranksep 40
skinparam nodesep 70

' DEFINICION DE CLASES
class Usuario {
    nroUser
    nombre
    apellido
    dni
    telefono
    domicilio
    mail
    fechaNacimiento
    retiro : Retiro
    crear ()
    mostrar ()
    calcularEdad ()
    conocerRetiro ()
}

class Retiro {
    nombre
    activades : Actividad
    descripcion
    horaInicio
    horaFin
    fechaInicio
    fechaFin
    fechaRegistro
    precio
    encargado : Encargado
    ubicacion : Ubicacion
    estado : Estado
    notaPersonal
    recordatorio : Recordatorio
    enlace : Enlace
    pago : Pago
    reseña : Reseña
    notificacio : Notificacion
    crear ()
    mostrar ()
    conocerActividades ()
    conocerEncargado ()
    conocerUbicacion ()
    conocerEstado ()
    conocerRecordatorio ()
    conocerEnlace ()
    conocerPago ()
    conocerReseña ()
    conocerNotificacion ()
    registrarDiaRegistro ()
    registrarEstadoRealizado ()
    - registrarReseña ()
    registrarEstadoReservado ()
    registrarConfirmacion ()
    registrarPagoTotal ()
    registrarCancelacion ()
    registrarNoInteres ()
    calcularSaldoPendiente ()
    registrarNotaPersonal ()
    notificarRecordatorio ()
    enviarNotificacion ()
    - notificarFechaFin ()
}

class Actividad {
    nroAct
    nombre
    descripcion
    crear ()
    mostrar ()
}

class Ubicacion {
    localidad
    nombreDelLugar
    direccion : Direccion
    crear ()
    mostrar ()
    conocerDireccion ()
}

class Direccion {
    calle
    numero
    crear ()
    mostrar ()
}

enum Estado {
    nombre
    crear ()
    mostrar ()
    tomarNombre ()
    mostrarNombre ()
}

class Recordatorio {
    nroRec
    descripcion
    motivo
    fecha
    hora
    crear ()
    mostrar ()
}

class Enlace {
    url
    nombreWeb
    crear ()
    mostrar ()
}

class Encargado {
    nombre
    telefono
    mail
    tipoEncargado : TipoEncargado
    crear ()
    mostrar ()
    conocerTipoEncargado ()
}

class TipoEncargado {
    tipo
    crear ()
    mostrar ()
}

class Pago {
    monto
    fecha
    medioDePago
    tipoDePago : TipoDePago
    crear ()
    mostrar ()
    conocerTipoDePago ()
}

class TipoDePago {
    tipo
    crear ()
    mostrar ()
}

class Reseña {
    nroRes
    puntuacion
    comentario
    fecha
    crear ()
    mostrar ()
}

class Notificacion {
    nroNot
    descripcion
    fechaHora
    crear ()
    mostrar ()
}

' NOTAS CON  POSICIONAMIENTO
note right of TipoEncargado
    - <b>Persona
    - <b>Organizacion
end note
note left of Estado
    - <b>Realizado
    - <b>Reservado
    - <b>Confirmado
    - <b>Cancelado
    - <b>No interesado
end note

note left of Reseña::puntuacion
    De 
    <b>1 a 5
    <b>estrellas
end note

note right of TipoDePago
    - <b>Seña</b>: adelanto inicial para reservar
    - <b>Pago parcial</b>: abono intermedio
    - <b>Pago final</b>: pago que completa el monto total 
                        (incluye el caso de pago único)
end note
' NOTAS CON ALIAS
note "Esta clase incluye los\nmetodos de seteo,\nlos cuales son extensivos\na las demas clases" as N1

' RELACIONES 
Usuario ---> Retiro : <size: 16><b>1..*
Retiro o---> Actividad : <size: 16><b>1..*

Retiro -> Pago : <size: 16><b>0..*
Pago -right-> TipoDePago : <size: 16><b>1

Retiro -down-> Encargado : <size: 16><b>1
Encargado -down-> TipoEncargado : <size: 16><b>1 

Retiro -down-> Ubicacion : <size: 16><b>1
Ubicacion -> Direccion : <size: 16><b>0..1

Retiro -down-> Estado : <size: 16><b>1

Retiro ---> Recordatorio : <size: 16><b>1..*
Retiro --> Notificacion : <size: 16><b>0..* 
Retiro -left-> Enlace : <size: 16><b>0..* 
Retiro -left-> Reseña : <size: 16><b> 0..*

Estado .down. N1 
@enduml